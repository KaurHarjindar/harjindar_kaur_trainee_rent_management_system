<odoo>
    <template id="tenant_webview">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container-fluid">
                    <center>Tenant Details</center>
                     <a t-attf-href="/tenants/edit/" class="btn btn-info">Add New Tenant</a>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Tenant Name</th>
                                <th>Dob</th>
                                <th>Gender</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Religion</th>
                                <th>Marital status</th>
                                <th>Permanant Address</th>
                                <th>Occupation</th>
                                <th>Father's Name</th>
                                <th>Mobile Number</th>
                                <th>action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="tenantsDetail" t-as="tent">
                            <tr>
                                <td><span t-field="tent.name" /></td>
                                <td><span t-field="tent.dob" /></td>
                                <td><span t-field="tent.gender" /></td>
                                <td><span t-field="tent.phone"/></td>
                                <td><span t-field="tent.email"/></td>
                                <td><span t-field="tent.Religion"/></td>
                                <td><span t-field="tent.Marital_status"/></td>
                                <td><span t-field="tent.Home_address"/></td>
                                <td><span t-field="tent.Occupation"/></td>
                                <td><span t-field="tent.Father_name"/></td>
                                <td><span t-field="tent.Fphone"/></td>
                                <td>
                                    <a t-attf-href="/tenants/editform/{{ slug(tent) }}" class="btn btn-info">Edit</a><br/>
                                    <a t-attf-href="/delete/{{ slug(tent) }}" class="btn btn-info">Delete</a>
                                </td>
                            </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="tenant_form">
        <t t-call="website.layout">
            <div class="container-fluid">
                <form t-attf-action='/tenants/submit/#{tenantsform.id if tenantsform else ""}' method="post">                
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tenant Name</label>
                            <input type="text" class="form-control" name="name" t-attf-value='#{tenantsform.name if tenantsform else ""}' />
                        </div>
                        <div class="form-group">
                            <label>Dob</label>
                            <input type="date" class="form-control" name="dob" t-attf-value='#{tenantsform.dob if tenantsform else ""}' />
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            <input type="text" class="form-control" name="gender" t-attf-value='#{tenantsform.gender if tenantsform else ""}' />
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="number" class="form-control" name="phone" t-attf-value='#{tenantsform.phone if tenantsform else ""}'/>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email" t-attf-value='#{tenantsform.email if tenantsform else ""}' />
                        </div>
                        <div class="form-group">
                            <label>Religion</label>
                            <input type="text" class="form-control" name="Religion" t-attf-value='#{tenantsform.Religion if tenantsform else ""}'/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Marital status</label>
                            <input type="text" class="form-control" name="Marital_status" t-attf-value='#{tenantsform.Marital_status if tenantsform else ""}'/>
                        </div>
                        <div class="form-group">
                            <label>Permanant Address</label>
                            <input type="text" class="form-control" name="Home_address" t-attf-value='#{tenantsform.Home_address if tenantsform else ""}' />
                        </div>
                        <div class="form-group">
                            <label>Occupation</label>
                            <input type="text" class="form-control" name="Occupation" t-attf-value='#{tenantsform.Occupation if tenantsform else ""}' />
                        </div>
                        <div class="form-group">
                            <label>Father's Name</label>
                            <input type="text" class="form-control" name="Father_name" t-attf-value='#{tenantsform.Father_name if tenantsform else ""}' />
                        </div>
                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="number" class="form-control" name="Fphone" t-attf-value='#{tenantsform.Fphone if tenantsform else ""}' />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    
                </form>
            </div>
        </t>
    </template>


<template id="owner_form" name="Partner Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <form t-attf-action='/form/submit/#{owner.id if owner else ""}' method="post">
                            <div class="form-group">
                                <label for="name">Name:</label>
                                <input type="text" class="form-control" name="name" id="name" t-attf-value='#{owner.name if owner else ""}' />          
                            </div>
                            <div class="form-group">
                                <label for="name">lastName:</label>
                                <input type="text" class="form-control" name="lastname" id="lastname" t-attf-value='#{owner.lastname if owner else ""}' />          
                            </div>
                            <div class="form-group">
                                <label for="name">Phone:</label>
                                <input type="text" class="form-control" name="number" id="number" t-attf-value='#{owner.number if owner else ""}' />
                            </div>
                            <div class="form-group">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" name="email" id="email" t-attf-value='#{owner.email if owner else ""}' />
                            </div>
                            <div class="form-group">
                                <label for="name">Address:</label>
                                <input type="text" class="form-control" name="address" id="address" t-attf-value='#{owner.address if owner else ""}' />
                            </div>
                            <div class="form-group">
                                <label for="name">city:</label>
                                <input type="text" class="form-control" name="city" id="city" t-attf-value='#{owner.city if owner else ""}' />
                            </div>
                            <div class="form-group">
                                <label for="name">state:</label>
                                <input type="text" class="form-control" name="state" id="state" t-attf-value='#{owner.state if owner else ""}' />
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>
              </div>
          </t>
    </template>

    <template id="owner_webview">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <center>owner Details</center>
                     <a t-attf-href="/form/edit/" class="btn btn-info">Add New Owner</a>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>number</th>
                                <th>Gender</th>
                                <th>email</th>
                                <th>address</th>
                                <th>city</th>
                                <th>state</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="ownerdetails" t-as="owner">
                            <tr>
                                <td><span t-field="owner.name" />
                                <span t-field="owner.lastname" /></td>
                                <td><span t-field="owner.number" /></td>
                                <td><span t-field="owner.email" /></td>
                                <td><span t-field="owner.address"/></td>
                                <td><span t-field="owner.city"/></td>
                                <td><span t-field="owner.state"/></td> 
                                 <td>
                                    <a t-attf-href="/form/delete/{{ slug(owner) }}" class="btn btn-info">Delete</a>
                                    <a t-attf-href="/form/editform/{{ slug(owner) }}" class="btn btn-info">Edit</a>
                                </td>
                            </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>