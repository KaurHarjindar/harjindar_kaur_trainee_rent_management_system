<odoo>


    <record model="ir.ui.view" id="tenanteview">
        <field name="name">training.tree</field>
        <field name="model">training.tenant</field>
        <field name="arch" type="xml">
            <tree string="tree view" decoration-info="Occupation=='Study'">
                <field name="tenant_id" />
                <field name="dob" />
                <field name="gender" />
                <field name="Marital_status" />
                <field name="Home_address" />
                <field name="Occupation" />
                <field name="Joining_date"/>
                <field name="tenant_name" />
                <field name="phone" />
                <field name="email" />
                <field name="Religion" />   
                <field name="Father_name" />
                <field name="Fphone" />
                <field name="room_ids" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="kanban_view">
        <field name="name">training.kanban</field>
        <field name="model">training.room</field>
        <field name="arch" type="xml">
            <kanban default_group_by="hostelId">
                <field name="roomNumber" />
                <field name="hostelId" />
                <field name="allot_ids" />
                <templates>
                   <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                <b>Roomnumber:</b>
                                <field name="roomNumber"/>
                                <field name="hostelId" />
                                </strong>
                                <div t-if="record.hostelId.value">
                                    <b>HostelID:</b>
                                    <t t-esc="record.hostelId.value"/>
                                </div>
                                <div t-if="record.allot_ids.value">
                                    <b>AllotId:</b>
                                    <t t-esc="record.allot_ids.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hostel_form" model="ir.ui.view">
        <field name="name">training.hostel.form</field>
        <field name="model">training.hostel</field>
        <field name="arch" type="xml">
            <form String="hostel form">
                <group>
                    <field name="roomIDs"/>
                    <field name="name"/>
                    <field name="featname"/>
                </group>        
            </form>
        </field>
    </record>

    <record id="room_tree" model="ir.ui.view">
        <field name="name">training.room</field>
        <field name="model">training.room</field>
        <field name="arch" type="xml">
            <tree string="room tree" decoration-info="hostelId==1" decoration-danger="hostelId==2" >
                <field name="hostelId" />
                <field name="roomNumber" />
                <field name="allot_ids" />
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="training_feature_form">
        <field name="name">roomfeature.form</field>
        <field name="model">training.roomfeature</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <group>
                        <field name="featurename"/>
                        <field name="dess"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="roomallotment_form" model="ir.ui.view">
        <field name="name">training.roomallotment</field>
        <field name="model">training.roomallotment</field>
        <field name="arch" type="xml">
            <form String="roomallotment form">
                <header>
                    <button name="%(training_roomissue_view)d" type="action" class="oe_highlight" string="Add RoomIssue"  />
                </header>
                <sheet>
                    <group>
                        <field name="allot_id"/>
                        <field name="allot_date"/>
                        <field name="allotOut_date"/>
                        <field name="Paymnent"/>
                        <field name="Total_rent"/>
                        <field name="hostelIds" />
                    </group>
                </sheet>        
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="alloteview">
        <field name="name">training.tree</field>
        <field name="model">training.roomallotment</field>
        <field name="arch" type="xml">
            <calendar string="Ideas" date_start="allot_date" date_stop="allotOut_date" color="allot_id">
                <field name="allot_id"/>
                <field name="Paymnent" />
            </calendar>
        </field>
    </record> 


    <record model="ir.ui.view" id="alloteviewGraph">
        <field name="name">training.tree</field>
        <field name="model">training.roomallotment</field>
        <field name="arch" type="xml">
            <graph>
                <field name="allot_id"/>
                <field name="Total_rent" type="measure" />
            </graph>
        </field>
    </record>  



    <!-- Actions -->

     <record id="action_hostel" model="ir.actions.act_window">
        <field name="name">hostel</field>
        <field name="res_model">training.hostel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="training_room_regi" model="ir.actions.act_window">
        <field name="name">training room</field>
        <field name="res_model">training.room</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="training_feature" model="ir.actions.act_window">
        <field name="name">training roomfeature</field>
        <field name="res_model">training.roomfeature</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="training_roomallotment" model="ir.actions.act_window">
        <field name="name">training roomallotment</field>
        <field name="res_model">training.roomallotment</field>
        <field name="view_mode">tree,form,calendar,graph</field>
    </record>

    
    <!-- main Root -->
    <menuitem id="tenants_root" name="Tenants Management"/>
    <menuitem id="tenants_hostel" name="Hostel" parent="tenants_root" action="action_hostel" />
    <menuitem id="tenants_room" name="Room" parent="tenants_root"  />
    <menuitem id="tenants_room1" name="RoomRegi" parent="tenants_room" action="training_room_regi"  />
    <menuitem id="tenants_roomdfeature" name="Feature" parent="tenants_room" action="training_feature" />
    <menuitem id="tenants_roomdallotment" name="roomallotment" parent="tenants_root" action="training_roomallotment" />

</odoo>